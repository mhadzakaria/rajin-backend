<!DOCTYPE html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + Ruby on Rails">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>RajinBelajar</title>
    <!-- =============== VENDOR STYLES ===============-->
    <%= stylesheet_link_tag 'base' %>
    <!-- =============== VIEW VENDOR STYLES ===============-->
    <%= stylesheet_link_tag 'dashboard' %>
    <%= yield :vendor_css_area %>
    <!-- =============== APP STYLES ===============-->
    <%= stylesheet_link_tag 'application', media: 'all', id: "maincss", 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'angle/themes/theme-h' %>
  </head>

  <body>
    <!-- Main section-->
    <section class="section-container">
      <!-- Page content-->
      <div class="content-wrapper">
        <%= yield %>
      </div>
    </section>
    <!-- Page footer-->
    <div class="p-lg text-center">
      <span>&copy;</span>
      <span><%= date_formater(Time.now, "%Y") %></span>
      <span>-</span>
      <span>Angle</span>
    </div>
    <!-- =============== VENDOR SCRIPTS ===============-->
    <%= javascript_include_tag 'base' %>
    <!-- =============== VIEW VENDOR SCRIPTS ===============-->
    <%= javascript_include_tag 'dashboard' %>
    <%= yield :vendor_js_area %>
    <!-- =============== APP SCRIPTS ===============-->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= yield :javascripts %>
  </body>
</html>