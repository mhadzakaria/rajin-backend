<p id="notice"><%= notice %></p>
<div class="content-wrapper">
  <div class="content-heading">
     <div>Companies</div>
  </div>
  <div class="container-fluid">
     <div class="card">
        <div class="card-header">
           <div class="card-title"></div>
           <div class="text-sm"></div>
           <div id="datatable_test_filter" class="data_filter">
            <%= search_form_for @q do |f| %>
              <%= f.label "Search by name" %>
              <%= f.search_field :name_cont %>
              <%= f.submit %>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
             <table class="table table-striped my-4 w-100" id="datatable_test">
                <thead>
                   <tr>
                      <th>Name</th>
                      <th>Status</th>
                      <th>Phone number</th>
                      <th>Full address</th>
                      <th>City</th>
                      <th>Postcode</th>
                      <th>State</th>
                      <th>Country</th>
                      <th>Latitude</th>
                      <th>Longitude</th>
                      <th></th>
                   </tr>
                </thead>
                <tbody>
                  <% @companies.each do |company| %>
                    <tr>
                      <td><%= company.name %></td>
                      <td><%= company.status %></td>
                      <td><%= company.phone_number %></td>
                      <td><%= company.full_address %></td>
                      <td><%= company.city %></td>
                      <td><%= company.postcode %></td>
                      <td><%= company.state %></td>
                      <td><%= company.country %></td>
                      <td><%= company.latitude %></td>
                      <td><%= company.longitude %></td>
                      <td>
                        <%= link_to 'Show', company %>
                        <%= link_to 'Edit', edit_company_path(company) %>
                        <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
             </table>
          </div>
          <%= paginate @companies %>
        </div>
     </div>
    <%= link_to 'New Company', new_company_path %>
  </div>
</div>
