<div class="card card-default">
   <div class="card-header"></div>
   <div class="card-body">
      <%= form_for user, url: url, method: method, local: true, class: 'form-horizontal' do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <fieldset>
          <legend>Form user</legend>

          <% if @user.new_record? %>
            <div class="form-group row">
              <div class="col-md-2">
                <%= form.label :email, class: 'form-label' %>
              </div>
              <div class="col-md-10">
                <%= form.email_field :email, class: 'form-control', required: true %>
              </div>
            </div>
          <% end %>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :nickname, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :nickname, class: 'form-control', type: 'text', required: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :first_name, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :first_name, class: 'form-control', type: 'text', required: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :last_name, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :last_name, class: 'form-control', type: 'text', required: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :phone_number, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :phone_number, class: 'form-control', type: 'text' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :date_of_birth, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :date_of_birth, class: 'form-control', type: 'date' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :gender, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.radio_button :gender, 'female', id: 'female', checked: user.gender.eql?('female') %>
              <%= form.label :gender, 'Female', for: 'female' %>
              <%= form.radio_button :gender, 'male', id: 'male', checked: user.gender.eql?('male') %>
              <%= form.label :gender, 'Male', for: 'male' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :full_address, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_area :full_address, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :city, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :city, class: 'form-control', type: 'text' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :postcode, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :postcode, class: 'form-control', type: 'number' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :state, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :state, class: 'form-control', type: 'text' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :country, class: 'form-label' %>
            </div>
            <div class="col-md-10">
              <%= form.text_field :country, class: 'form-control', type: 'text' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2">
              <%= form.label :role, class: 'form-label' %>
            </div>
            <div class="col-md-10">
            	<%= form.select(:role_id, Role.all.map {|role| [role.role_name, role.id] }, class: 'form-control', include_blank: '--select one--') %>
            </div>
          </div>
        </fieldset>

        <div class="actions">
          <%= form.submit submit_button_label(user), class: 'btn btn-primary' %>
        </div>
      <% end %>
   </div>
</div>