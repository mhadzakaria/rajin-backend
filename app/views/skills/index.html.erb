<p id="notice"><%= notice %></p>
<div class="content-wrapper">
  <div class="content-heading">
     <div>Skills</div>
  </div>
  <div class="container-fluid">
     <div class="card">
        <div class="card-header">
           <div class="card-title"></div>
           <div class="text-sm"></div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
             <table class="table table-striped my-4 w-100" id="datatable_test">
                <thead>
                   <tr>
                      <th>Name</th>
                      <th></th>
                   </tr>
                </thead>
                <tbody>
                  <% @skills.each do |skill| %>
                    <tr>
                      <td>
                        <%= skill.name %>
                      </td>
                      <td>
                        <%= link_to 'Show', skill %>
                        <%= link_to 'Edit', edit_skill_path(skill) %>
                        <%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %>   
                      </td>
                    </tr>
                  <% end %>
                </tbody>
             </table>
          </div>
        </div>
     </div>
    <%= link_to 'New Skill', new_skill_path %>
  </div>
</div>