<div class="card card-default">
   <div class="card-header"></div>
   <div class="card-body">
    <%= form_with(model: picture, local: true) do |form| %>
      <% if picture.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

          <ul>
          <% picture.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <legend>Form Picture</legend>
        <div class="form-group row">
          <div class="col-md-10">
            <%= form.text_field :user_id, class: "form-control", type:"hidden" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-10">
            <%= form.text_field :pictureable_type, class: "form-control", type:"hidden" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-10">
            <%= form.text_field :pictureable_id, class: "form-control", type:"hidden" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :file_url, class: "col-md-2 col-form-label" %>
          <div class="col-md-10">
            <%= form.file_field :file_url, type:"file" %>
          </div>
        </div>
        <fieldset>
          <div class="form-group row">
            <%= form.label :file_type, class: "col-md-2 col-form-label" %>
            <div class="col-md-10">
              <%= form.text_field :file_type, class: "form-control", type:"text" %>
            </div>
          </div>
        </fieldset>

        <div class="actions">
          <%= form.submit "Create Picture", class: "btn btn-primary" %>
        </div>
      <% end %>
   </div>
</div>
