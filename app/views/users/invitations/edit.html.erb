<div class="block-center mt-4 wd-xl">
  <!-- START card-->
  <div class="card card-flat">
    <div class="card-header text-center bg-dark">
       <a href="#">
          <img class="block-center rounded" src="<%= image_path('angle/logo.png') %>" alt="Image" />
       </a>
    </div>
    <div class="card-body">
      <p class="text-center py-2"><%= t "devise.invitations.edit.header" %></p>
      <%= render "layouts/partials/flash_message" %>
      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'mb-3' }) do |f| %>
        <%= f.hidden_field :invitation_token, readonly: true %>
        <div class="form-group">
          <div class="input-group with-focus">
            <%= f.password_field :password, autofocus: true , autocomplete: "off",
                class: "form-control border-right-0", placeholder: "Enter password", required: true %>
            <div class="input-group-append">
              <span class="input-group-text text-muted bg-transparent border-left-0">
                <em class="fa fa-lock"></em>
              </span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group with-focus">
            <%= f.password_field :password_confirmation, autocomplete: "current-password",
                class: "form-control border-right-0", placeholder: "Password Confimation", required: "required" %>
            <div class="input-group-append">
              <span class="input-group-text text-muted bg-transparent border-left-0">
                <em class="fa fa-lock"></em>
              </span>
            </div>
          </div>
        </div>
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-block btn-primary mt-3" %>
        <%= render "users/shared/links" %>
      <% end %>
    </div>
  </div>
  <!-- END card-->
</div>

