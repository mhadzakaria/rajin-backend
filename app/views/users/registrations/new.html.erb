<div class="block-center mt-4 wd-xl">
   <!-- START card-->
   <div class="card card-flat">
      <div class="card-header text-center bg-dark">
         <a href="#">
            <img class="block-center" src="<%= image_path('angle/logo.png') %>" alt="Image" />
         </a>
      </div>
      <div class="card-body">
        <p class="text-center py-2">SIGNUP TO GET INSTANT ACCESS.</p>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), class: "mb-3" do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
             <%= f.label :email, 'Email address', class: 'text-muted' %>
             <div class="input-group with-focus">
                <%= f.email_field :email, autofocus: true,
                      class: 'form-control border-right-0', placeholder: "Enter email", autocomplete: "off", required: true %>
                <div class="input-group-append">
                  <span class="input-group-text text-muted bg-transparent border-left-0">
                    <em class="fa fa-envelope"></em>
                  </span>
                </div>
             </div>
          </div>
          <div class="form-group">
            <%= f.label :password, 'Password', class: 'text-muted' %>
            <div class="input-group with-focus">
              <%= f.password_field :password, autofocus: "off",
                    class: 'form-control border-right-0', placeholder: "Enter password", autocomplete: "off", required: true %>
              <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                  <em class="fa fa-lock"></em>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Retype Password', class: 'text-muted' %>
            <label class="text-muted" for="signupInputRePassword1"></label>
            <div class="input-group with-focus">
              <%= f.password_field :password_confirmation, autofocus: "off",
                    class: 'form-control border-right-0', placeholder: "Retype Password", autocomplete: "off", required: true %>
              <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                  <em class="fa fa-lock"></em>
                </span>
              </div>
            </div>
          </div>
          <div class="checkbox c-checkbox mt-0">
            <!-- 
              <label>
                <input type="checkbox" value="" required="required" name="agreed" />
                <span class="fa fa-check"></span>I agree with the<a class="ml-1" href="#">terms</a>
              </label>
            -->
          </div>
          <%= f.submit "Create account", class: "btn btn-block btn-primary mt-3" %>
        <% end %>
        <%= render "users/shared/links" %>
     </div>
  </div>
  <!-- END card-->
</div>
